---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

function formatDate(date: Date): string {
    return new Intl.DateTimeFormat('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    }).format(date);
}

const posts = await getCollection('blog', ({ data }) => {
    return import.meta.env.PROD ? !data.draft : true;
});

const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Blog | Phoenixx Casino">
    <section class="blog-index">
        <div class="container">
            <h1>Latest from Phoenixx</h1>
            
            <div class="post-grid">
                {sortedPosts.map(post => (
                    <div class="post-card">
                        <div class="card-image">
                            <img src={post.data.image} alt={post.data.title} />
                            <span class="category">{post.data.category}</span>
                        </div>
                        <div class="post-content">
                            <h3>{post.data.title}</h3>
                            <p>{post.data.description}</p>
                            <div class="card-footer">
                                <div class="post-meta">
                                    <span class="date">
                                        <i class="far fa-calendar"></i> 
                                        {formatDate(post.data.pubDate)}
                                    </span>
                                    <span class="author">
                                        <i class="far fa-user"></i> 
                                        {post.data.author}
                                    </span>
                                </div>
                                <a href={`/blog/${post.slug}`} class="read-more">
                                    Read More 
                                    <span class="arrow">â†’</span>
                                </a>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>
</Layout>

<style>
    .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .blog-index {
        background: #000;
        color: #fff;
        padding: 6rem 0;
    }

    h1 {
        text-align: center;
        font-size: 3rem;
        margin-bottom: 4rem;
        background: linear-gradient(90deg, #e7c980 0%, #9e8253 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .post-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 2.5rem;
    }

    .post-card {
        background: rgba(255,255,255,0.05);
        border: 1px solid rgba(231, 201, 128, 0.1);
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .post-card:hover {
        transform: translateY(-5px);
        border-color: rgba(231, 201, 128, 0.3);
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    }

    .card-image {
        position: relative;
        height: 240px;
        overflow: hidden;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .post-card:hover .card-image img {
        transform: scale(1.05);
    }

    .category {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: #e7c980;
        color: #000;
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .post-content {
        padding: 1.8rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .post-content h3 {
        font-size: 1.4rem;
        margin-bottom: 1rem;
        line-height: 1.4;
        color: #e7c980;
    }

    .post-content p {
        color: #ccc;
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
        flex-grow: 1;
    }

    .card-footer {
        margin-top: auto;
        border-top: 1px solid rgba(231, 201, 128, 0.1);
        padding-top: 1.2rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .post-meta {
        display: flex;
        justify-content: space-between;
        color: #999;
        font-size: 0.85rem;
    }

    .post-meta span {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .read-more {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: #e7c980;
        font-size: 0.95rem;
        font-weight: 600;
        text-decoration: none;
        padding: 0.5rem 0;
        transition: all 0.3s ease;
    }

    .read-more .arrow {
        transition: transform 0.3s ease;
    }

    .read-more:hover {
        color: #fff;
    }

    .read-more:hover .arrow {
        transform: translateX(5px);
    }

    @media (max-width: 1024px) {
        .post-grid {
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        }
    }

    @media (max-width: 768px) {
        .container {
            padding: 0 1.5rem;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 3rem;
        }

        .post-grid {
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 2rem;
        }

        .card-image {
            height: 200px;
        }
    }

    @media (max-width: 480px) {
        .container {
            padding: 0 1rem;
        }

        h1 {
            font-size: 2rem;
        }

        .post-grid {
            grid-template-columns: 1fr;
        }

        .post-meta {
            flex-direction: column;
            gap: 0.5rem;
        }
    }
</style>