---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
// Import necessary images
import HeroImage from '../assets/banner/banner-5.png';
import AboutImage from '../assets/about/about-1.jpg';
import GalleryImage1 from "../assets/gallery/amenities/1.jpg";
import GalleryImage2 from "../assets/gallery/gaming/1.jpg";
import GalleryImage3 from "../assets/gallery/entertainment/2.jpg";
import GalleryImage4 from "../assets/gallery/ambiance/1.jpg";

const features = [
    {
        icon: "fa-solid fa-music",
        title: "Live",
        subtitle: "Performances"
    },
    {
        icon: "fa-solid fa-calendar-check",
        title: "Festive",
        subtitle: "Fun"
    },
    {
        icon: "fa-solid fa-martini-glass-citrus",
        title: "Drinks &",
        subtitle: "Cocktails"
    },
    {
        icon: "fa-solid fa-utensils",
        title: "Delicious",
        subtitle: "Food"
    },
    {
        icon: "fa-solid fa-star",
        title: "Celebrity",
        subtitle: "Visits"
    }
];

const galleryCategories = [
    { name: "Celebrities", image: GalleryImage1 },
    { name: "Performances", image: GalleryImage2 },
    { name: "Ambiance", image: GalleryImage3 },
    { name: "Food & Drinks", image: GalleryImage4 }
];

const whyUsFeatures = [
    "Live Entertainment",
    "Russian Dancer's",
    "Delicious Buffet",
    "Sophisticated Cocktails",
    "Exciting Events",
    "Celebrity Visits",
    "Luxury Ambiance"
];
---

<Layout title="Phoenixx Group Goa - Luxury Entertainment Hub">
    <Navigation />
    
    <!-- Preheader Offer -->
    <div class="preheader-offer">
        <p>Get 20% OFF + FREE 500 OTPC - LIMITED PERIOD</p>
    </div>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <h1>Goa's Most Luxurious Entertainment Hub</h1>
            <p class="hero-subtitle">Live Performances | DJs | Bands's | Unlimited Food & Drinks | Celebrity Visit's</p>
            <a href="/contact" class="cta-button">Book Now</a>
        </div>
    </section>

    <!-- About Us Section -->
    <section class="about-section">
        <div class="container">
            <div class="content">
                <div class="title-section">
                    <h2>Our Luxury Experience</h2>
                    <div class="underline"></div>
                </div>
                
                <p class="description">
                    Phoenixx Group Goa offers a luxurious venue for live entertainment, performances & more, 
                    located in Candolim at Hilton Goa Resort, this is the ideal nightlife destination in goa 
                    to check off your goa bucket list!
                </p>

                <div class="features">
                    {features.map((feature) => (
                        <div class="feature">
                            <div class="icon-circle">
                                <i class={feature.icon}></i>
                            </div>
                            <div class="feature-text">
                                <h3>{feature.title}</h3>
                                <p>{feature.subtitle}</p>
                            </div>
                        </div>
                    ))}
                </div>

                <a href="/contact" class="book-now">Book Now</a>
            </div>
            
            <div class="video-container">
                <iframe 
                    width="560" 
                    height="315"
                    src="https://www.youtube.com/embed/tawS88SZ8Cw?si=EFiS0OMvuUFMWjjD&autoplay=1&mute=1&loop=1&playlist=tawS88SZ8Cw&controls=0&showinfo=0&rel=0"
                    title="YouTube video player" 
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    referrerpolicy="strict-origin-when-cross-origin" 
                    allowfullscreen>
                </iframe>
            </div>
        </div>
    </section>

    <!-- Gallery Section -->
    <section class="gallery-section">
        <div class="container">
            <h2 class="section-title">Explore our Entertainment Hub</h2>
            <div class="gallery-grid">
                {galleryCategories.map((category) => (
                    <div class="gallery-item">
                        <Image 
                            src={category.image} 
                            alt={category.name}
                            width={400}
                            height={300}
                            quality="high"
                        />
                        <div class="gallery-overlay">
                            <h3>{category.name}</h3>
                        </div>
                    </div>
                ))}
            </div>
            <a href="/gallery" class="cta-button">Visit Now</a>
        </div>
    </section>

    <!-- Why Us Section -->
    <section class="why-us-section">
        <div class="container">
            <h2 class="section-title">Why Visit Phoenixx Group?</h2>
            <div class="features-grid">
                {whyUsFeatures.map((feature) => (
                    <div class="feature-item">
                        <i class="fa-solid fa-check"></i>
                        <span>{feature}</span>
                    </div>
                ))}
            </div>
            <a href="/contact" class="cta-button">I want to visit Phoenixx Goa</a>
        </div>
    </section>

    <Footer />
</Layout>

<style>
    /* Preheader Offer */
    .preheader-offer {
        background-color: #ff0000;
        color: white;
        text-align: center;
        padding: 0.5rem;
        font-weight: bold;
        font-size: 1.1rem;
    }

    /* Hero Section */
    .hero-section {
        position: relative;
        height: 80vh;
        background-image: url('/hero-bg.jpg');
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        margin-top: 0;
    }

    .hero-content {
        max-width: 800px;
        padding: 2rem;
    }

    .hero-content h1 {
        font-size: 3.5rem;
        margin-bottom: 1rem;
        background: linear-gradient(90deg, #e7c980 0%, #9e8253 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        margin-bottom: 2rem;
        color: #e0e0e0;
    }

    /* About Section */
    .about-section {
        padding: 4rem 0;
        background-color: #000;
        color: #fff;
    }

    .container {
        max-width: 1200px;
        width: 90%;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        align-items: flex-start;
    }

    .title-section {
        margin-bottom: 2rem;
    }

    h2 {
        font-size: 2.5rem;
        background: linear-gradient(90deg, #e7c980 0%, #9e8253 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
        font-weight: 700;
    }

    .underline {
        width: 60px;
        height: 3px;
        background-color: #D4AF37;
        margin-top: 1rem;
    }

    .description {
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
        color: #e0e0e0;
    }

    .features {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .feature {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .icon-circle {
        width: 60px;
        height: 60px;
        background: rgba(231, 201, 128, 0.1);
        border: 1px solid rgba(212, 175, 55, 0.3);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .icon-circle i {
        font-size: 1.5rem;
        color: #e7c980;
    }

    .feature-text h3 {
        font-size: 1.2rem;
        margin: 0;
        color: #e7c980;
    }

    .feature-text p {
        margin: 0;
        color: #e0e0e0;
    }

    /* Gallery Section */
    .gallery-section {
        padding: 4rem 0;
        background-color: #111;
    }

    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
        margin: 2rem 0;
    }

    .gallery-item {
        position: relative;
        overflow: hidden;
        border-radius: 8px;
        aspect-ratio: 4/3;
    }

    .gallery-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .gallery-item:hover .gallery-overlay {
        opacity: 1;
    }

    .gallery-overlay h3 {
        color: white;
        font-size: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Why Us Section */
    .why-us-section {
        padding: 4rem 0;
        background-color: #000;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin: 2rem 0;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        background: rgba(231, 201, 128, 0.1);
        border-radius: 8px;
        transition: transform 0.3s ease;
    }

    .feature-item:hover {
        transform: translateY(-5px);
    }

    .feature-item i {
        color: #e7c980;
        font-size: 1.2rem;
    }

    .feature-item span {
        color: #e0e0e0;
        font-size: 1.1rem;
    }

    /* CTA Button */
    .cta-button {
        display: inline-block;
        padding: 1rem 2rem;
        background: linear-gradient(90deg, #e7c980 0%, #9e8253 100%);
        color: #000;
        text-decoration: none;
        border-radius: 4px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

    .cta-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(231, 201, 128, 0.3);
    }

    /* Responsive Design */
    @media (max-width: 1024px) {
        .container {
            grid-template-columns: 1fr;
        }

        .hero-content h1 {
            font-size: 2.8rem;
        }

        .features {
            grid-template-columns: 1fr;
        }
    }

    @media (max-width: 768px) {
        .hero-content h1 {
            font-size: 2.2rem;
        }

        .hero-subtitle {
            font-size: 1.2rem;
        }

        .gallery-grid {
            grid-template-columns: 1fr;
        }

        h2 {
            font-size: 2rem;
        }
    }

    @media (max-width: 480px) {
        .hero-content h1 {
            font-size: 1.8rem;
        }

        .hero-subtitle {
            font-size: 1rem;
        }

        .feature-item {
            padding: 0.8rem;
        }

        .feature-item span {
            font-size: 1rem;
        }
    }
</style> 